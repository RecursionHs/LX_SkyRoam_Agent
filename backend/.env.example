# 应用配置
APP_NAME=LX SkyRoam Agent
VERSION=1.0.0
DEBUG=false

# 服务器配置
HOST=0.0.0.0
PORT=8001
ALLOWED_HOSTS=["*"]

# 数据库配置
DATABASE_URL=postgresql://postgres:123456@localhost:5432/skyroam

# Redis配置
REDIS_URL=redis://1.1.1.1:6379/0
REDIS_PASSWORD=

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# OpenAI配置
OPENAI_API_KEY=sk-1111
OPENAI_MODEL=glm-4-flash
OPENAI_MAX_TOKENS=65536
OPENAI_TEMPERATURE=0.7
OPENAI_API_BASE=https://open.bigmodel.cn/api/paas/v4
OPENAI_TIMEOUT=300
OPENAI_MAX_RETRIES=3

# 第三方API配置
WEATHER_API_KEY=your-openweathermap-api-key
HOTEL_API_KEY=your-booking-api-key
MAP_API_KEY=your-google-maps-api-key

# Amadeus API配置
AMADEUS_CLIENT_ID=1111
AMADEUS_CLIENT_SECRET=1111
AMADEUS_API_BASE=https://test.api.amadeus.com
AMADEUS_TOKEN_URL=https://test.api.amadeus.com/v1/security/oauth2/token

BAIDU_MAPS_API_KEY=1111

# 地图服务提供商配置
MAP_PROVIDER=amap  # 可选值: "baidu" 或 "amap"

# 高德地图 API 密钥
AMAP_API_KEY=1111

# 高德地图 MCP 服务配置
AMAP_MCP_MODE=http  # 可选值: "http" 或 "sse"
AMAP_MCP_HTTP_URL=http://localhost:3002/mcp
AMAP_MCP_SSE_URL=http://localhost:3002/sse

RESTAURANT_DATA_SOURCE=amap  # 可选值: "amap" 或 "baidu" 或 "both"

# 天气数据源配置
WEATHER_DATA_SOURCE=amap  # 可选值: "amap" 或 "baidu" 或 "openweather"

# 小红书爬虫并发
XHS_MAX_CONCURRENT_CRAWLERS=2

# 安全配置
SECRET_KEY=lxai20251010
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=360

# 文件存储
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10 MB
LOG_RETENTION=5
LOG_COMPRESSION=zip
LOG_TO_CONSOLE=true
LOG_TO_FILE=true

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 任务配置
TASK_TIMEOUT=300
MAX_CONCURRENT_TASKS=10

# 限流配置
RATE_LIMIT_ENABLED=true
# 窗口内最大请求数
RATE_LIMIT_MAX_REQUESTS=30
# 窗口时长（秒）
RATE_LIMIT_WINDOW_SECONDS=10
# 白名单 IP 列表，默认空
RATE_LIMIT_WHITELIST=[]
# 排除路径列表
RATE_LIMIT_EXCLUDE_PATHS=["/docs","/redoc","/openapi.json"]
